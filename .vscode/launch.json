    "version": "0.2.0",
    "configurations": [

        {
            "name": "Student By Id",
            "request": "launch",
            "type": "dart",
            "program": "${workspaceFolder}/bin/cli_treino.dart",
            "args": [
                "students",
                "byId",
                "-i",
                "${input:id_students}",
            ]

        },
        {
            "name": "Student Find All",
            "request": "launch",
            "type": "dart",
            "program": "${workspaceFolder}/bin/cli_treino.dart",
            "args": [
                "students",
                "findAll",
                "${input:findAll_students}",
            ]

        }
    ],
    "inputs": [
     {
        "id": "id_students",
        "description": "Informa o ID do aluno",
        "default": "",
        "type": "promptString"
     },
     {
        "id": "findAll_students",
        "description": "Digite findAll para buscar todos os  alunos",
        "default": "",
        "type": "promptString"
     }
    ]
}